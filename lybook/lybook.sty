% #1 : Title
% #2 : Author
% #3 : Date
% #4 : Level
% #5 : Location
\newcommand\buildfront[5]{
	\frontmatter

	\title{#1}
	\author{#2}
	\date{#3}

	\maketitle

% Source : https://latex.org/forum/viewtopic.php?t=12386

	\begin{KeepFromToc}
   		\tableofcontents
	\end{KeepFromToc}

	\mainmatter

	\fancyfoot[L]{\small\textsc{#4}}
	\fancyfoot[R]{\small\textsc{#5}}
}


